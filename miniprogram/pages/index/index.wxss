/**index.wxss**/

page {
  /* padding-top: 54rpx; */
  padding-bottom: 60rpx;
  background-color: #fff;
}

.container {
  width: 100%;
  height: 100%;
  align-items: center;
}

.main {
  width: 90%;
  display: flex;
  flex-direction: column;
  font-family: PingFang SC;
}

.image_container {
  margin-top: 48rpx;
  display: flex;
  justify-content: center;
}

.title {
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.sub_title {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.6);
  line-height: 52rpx;
}
/* 整体容器 */
.icon-container {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin: 15rpx;
}

/* 每行图标 */
.icon-row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 15rpx;
}

/* 单个图标项 */
.icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 15rpx 0;
  transition: all 0.2s ease;
  border-radius: 10rpx;
  width: 18%; /* 一行五个图标，每个约占18%宽度，留2%作为间距 */
}

/* 图标项悬停效果 */
.icon-item:active {
  background-color: #f5f5f5;
  transform: scale(0.98);
}

/* 图标图片 */
.icon-image {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 8rpx;
  border-radius: 15rpx;
}

/* 图标文字 */
.icon-text {
  font-size: 24rpx;
  color: #333333;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

/* 响应式调整 - 针对不同屏幕尺寸 */
@media screen and (max-width: 320px) {
  .icon-image {
    width: 60rpx;
    height: 60rpx;
  }
  
  .icon-text {
    font-size: 22rpx;
  }
}

@media screen and (min-width: 414px) {
  .icon-image {
    width: 80rpx;
    height: 80rpx;
  }
  
  .icon-text {
    font-size: 26rpx;
  }
}    

.functitle{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
  font-size: 18px;
}
.button {
  height: 140rpx;
  position: relative;
  color: white; /* 文字颜色设为白色，可根据图片调整 */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  border-radius: 5px; /* 按钮圆角，可按需调整 */
  overflow: hidden; /* 防止背景图片超出按钮范围 */
  margin-bottom: 5px;
}

.button::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  z-index: -1; /* 让背景图片在文字下方 */
}

/* 为“路线查询”按钮设置特定背景图片 */
.button[bindtap="discoverCloud"]::after {
  background-image:url('https://picsum.photos/seed/hotel/80/80');
}

/* 为“AR虚拟导览”按钮设置特定背景图片 */
.button:not([bindtap="discoverCloud"])::after {
  background-image: url('https://picsum.photos/seed/strategy/80/80');
}




