
.article-container {

  padding: 20rpx;
  background-color: #f5f5f5;
}

.article-title {
  font-size: 45rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
  margin-left: 20px;
}

.article-lead {
  text-align: center;
  white-space: pre-wrap;
  font-size: 34rpx;
  font-weight: 350;
  line-height: 53rpx;
  margin-bottom: 30rpx;
}

.divider {
  height: 1rpx;
  background-color: #e2dbdb;
  margin: 30rpx 0;
}

.culture-item {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  text-align: center;
  white-space: pre-wrap;
  font-size: 33rpx;
  font-weight: 200;
  line-height: 49rpx;
  margin-bottom: 30rpx;
}

.culture-title {
  padding: 5px;
  font-size: 50rpx;
  font-weight: 500;
  color: #f3c23b;
  margin-bottom: 15rpx;
}

.culture-image {
  width: 100%;
  height: 300rpx;
  margin: 20rpx 0;
  border-radius: 15rpx;
}

.article-footer {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin: 40rpx 0;
}
.subtitle {
  font-family: PingFang SC;
  font-weight: 500;
  color: #0a7041;
  font-size: 36rpx;
  width: 93%;
  margin-top: 50rpx;
}
.stopNumber{
  font-family: PingFang SC;
  font-weight: 400;
  color: #297cc0;
  font-size: 36rpx;
  width: 93%;
  margin-top: 50rpx;
}