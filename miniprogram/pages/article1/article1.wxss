/* pages/article1/article1.wxss */
.article-container {

  padding: 20rpx;
  background-color: #f5f5f5;
}

.article-title {
  font-size: 45rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
  margin-left: 20px;
}
.article-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.favorite-btn {
  cursor: pointer;
  transition: opacity 0.2s;
}

.favorite-btn:active {
  opacity: 0.8;
}
.article-lead {
  text-align: center;
  white-space: pre-wrap;
  font-size: 34rpx;
  font-weight: 350;
  line-height: 53rpx;
  margin-bottom: 30rpx;
}

.divider {
  height: 1rpx;
  background-color: #e2dbdb;
  margin: 30rpx 0;
}

.homestay-item {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  text-align: center;
  white-space: pre-wrap;
  font-size: 33rpx;
  font-weight: 200;
  line-height: 49rpx;
  margin-bottom: 30rpx;
}

.homestay-title {
  padding: 5px;
  font-size: 50rpx;
  font-weight: 500;
  color: #f3c23b;
  margin-bottom: 15rpx;
}

.homestay-image {
  width: 100%;
  height: 300rpx;
  margin: 20rpx 0;
  border-radius: 15rpx;
}

.homestay-desc{
  padding: 18rpx;
  font-size: 30rpx;
  color: #666;
  line-height: 40rpx;
  margin-left: 0;
}

.homestay-content {
  font-size: 26rpx;
  line-height: 40rpx;
  color: #333;
  margin-top: 20rpx;
}

.article-footer {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin: 40rpx 0;
}