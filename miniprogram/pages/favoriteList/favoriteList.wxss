/* pages/favoriteList/favoriteList.wxss */
.favorite-container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.page-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin: 30rpx 0 20rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  padding: 50rpx 0;
}

.favorite-item {
  background-color: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-title {
  font-size: 30rpx;
  color: #444;
}

.delete-btn {
  font-size: 36rpx;
  color: #ff4d4f;
  cursor: pointer;
}